{
  "name": "shext",
  "version": "0.2.1",
  "author": "plvo <plvoo@proton.me>",
  "license": "MIT",
  "description": "âš¡ A collection of utility functions and components to speed up Next.js development",
  "homepage": "https://github.com/plvo/shext",
  "bugs": {
    "url": "https://github.com/plvo/shext/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plvo/shext"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "typescript",
    "nextjs",
    "react",
    "web"
  ],
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write .",
    "clean": "rimraf dist/",
    "build": "pnpm run clean && tsc",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run",
    "dev": "vitest",
    "ci": "pnpm run format && pnpm run build && pnpm run check-exports && pnpm run test",
    "prepublishOnly": "pnpm run ci",
    "prepare": "husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
